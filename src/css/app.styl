body
  font-family 'Trebuchet MS', Arial, sans-serif
  color #333
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.wrapper
  display table
  position absolute
  width 100%
  height 100%

.wrapper-cell
  display table-cell
  vertical-align middle

.wrapper-content
  margin auto
  text-align center

.home-page
  margin-top -8em

.logo
  width 64px
  height 64px

.about-me
  font-size 24px
  margin-top 1em
  line-height 140%
  list-style-type none
  padding 0

.links
  margin-top 1em

.links__item
  color = #c55
  display inline-block
  margin 0 0.5em
  color color
  text-decoration none
  &:hover
    color darken(color, 30)
