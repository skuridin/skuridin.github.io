body
  font-family 'Exo 2', sans-serif
  font-weight 300

.container
  padding-top 20px

.logo
  width 60px
  height 60px
  display block
  margin 0 auto

.about
  text-align center
  font-size 22px
  padding 0 1em
  line-height 1.4em
  margin-bottom 2em

.links
  list-style none
  padding 0
  li
    border-top 1px #eee solid
    a
      display block
      text-decoration none
      color #888
      padding 1em 0
      text-align center
      font-weight 300
      &:hover
        color #f15e4a

@media screen and (min-width: 768px)
  .container
    padding-top 140px
    width 410px
    margin 0 auto

  .about
    font-size 28px
    margin-bottom 1em

  .links
    padding-left 66px
    li
      display inline-block
      border none
      a
        padding 0 7.5px
