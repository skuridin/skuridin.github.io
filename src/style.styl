body
  font-family "Exo 2", "Open Sans", Arial, sans-serif
  color #333

.wrapper
  display table
  position absolute
  width 100%
  height 100%

.wrapper__cell
  display table-cell
  vertical-align middle

.wrapper__content
  margin auto
  text-align center

.home-page
  margin-top -8em
  font-weight 300

.home-page__logo
  width 64px
  height 64px

.home-page__info
  font-size 24px
  margin-top 1em

.links
  margin-top 1em

.links__item
  color = #c55
  display inline-block
  margin 0 0.5em
  color color
  text-decoration none
  &:hover {
    color darken(color, 30)
  }
