body
  font-family "Exo 2", "Open Sans", Arial, sans-serif
  font-weight 300
.wrapper-table
  display table
  position absolute
  height 100%
  width 100%
  margin-top -3em
.wrapper-cell
  display: table-cell
  vertical-align: middle
.logo
  size = 64px
  width size
  height size
  background-image url('./img/logo.svg')
  background-size size
  border-radius 50%
  margin 1em auto
.info
  margin 0 auto
  text-align center
  font-size 24px
.links
  font-size 14px
  margin 0 auto
  text-align center
  a
    color #c55
    text-decoration none
    &:hover
      text-decoration underline
