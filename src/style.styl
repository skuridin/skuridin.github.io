body
  font-family "Exo 2", "Open Sans", Arial, sans-serif

.wrapper-table
  display table
  position absolute
  width 100%
  height 100%

.wrapper-cell
  display table-cell
  vertical-align middle

.wrapper
  margin auto
  text-align center

.home-page
  margin-top -8em
  font-weight 300

.home-page-logo
  width 64px
  height 64px

.home-page-info
  font-size 24px
  margin-top 1em

.home-page-links
  margin-top 1em
  a
    display inline-block
    margin 0 0.5em
    color #c55

.cv-page
  font-weight 300
  padding-top 1em
  .label
    font-weight 300
    margin-right 0.3em
    display inline-block

.cv-my-name
  margin-top 8px

.cv-page-photo
  max-width 100px
  max-height 100px

.cv-back-to-home
  margin-bottom 1em

.cv-career-item
  margin-bottom 2em

.cv-career-content
  padding-left 1.3em

@media (min-width: 768px)
  .cv-my-name
    margin-top 25px
